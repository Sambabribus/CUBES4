<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="com.example.application.controller.gestionStocks.create.users.UsersController"
      alignment="CENTER" prefHeight="500.0" prefWidth="600.0">

    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Creation d'un nouvel employé"/>

    <VBox spacing="10" alignment="CENTER">
        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="150">
            <Label text="Nom :"/>
            <TextField fx:id="nameField" maxWidth="150"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="150">
            <Label text="Prénom :"/>
            <TextField fx:id="firstNameField" maxWidth="150"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="150">
            <Label text="Email :"/>
            <TextField fx:id="emailField" maxWidth="150"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="150">
            <Label text="Pseudo :"/>
            <TextField fx:id="usernameField" maxWidth="150"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="150">
            <Label text="Mot de passe :"/>
            <TextField fx:id="passwordField" maxWidth="150"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="150">
            <Label text="Téléphone :"/>
            <TextField fx:id="phoneField" maxWidth="150"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="150">
            <Label text="Addresse :"/>
            <TextField fx:id="addressField" maxWidth="150"/>
        </VBox>
        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="150">
            <Label text="Date anniversaire :"/>
            <DatePicker fx:id="birthdatePicker" maxWidth="150"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER_LEFT" maxWidth="150">
            <Label text="Genre :"/>
            <ComboBox fx:id="genreComboBox" maxWidth="150"/>
        </VBox>
    </VBox>

    <HBox spacing="30" alignment="CENTER">
        <Button text="Créer" onAction="#handleCreateButton"/>
    </HBox>
</VBox>
